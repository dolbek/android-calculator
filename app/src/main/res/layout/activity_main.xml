<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="right|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/memoryIndicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/memory"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/orderIndicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/regular" />

        <TextView
            android:id="@+id/runningDisplay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="right|center_vertical"
            android:text="0"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textSize="40sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonMem"
                style="@style/calculatorButton"
                android:text="M" />

            <Button
                android:id="@+id/buttonMemAdd"
                style="@style/calculatorButton"
                android:text="M+" />

            <Button
                android:id="@+id/buttonMemSub"
                style="@style/calculatorButton"
                android:text="M-" />

            <Button
                android:id="@+id/buttonMemRecall"
                style="@style/calculatorButton"
                android:text="MR" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonOrder"
                style="@style/calculatorButton"
                android:text="Order" />

            <Button
                android:id="@+id/buttonSqrt"
                style="@style/calculatorButton"
                android:text="sqrt" />

            <Button
                android:id="@+id/buttonClear"
                style="@style/calculatorButton"
                android:text="CE" />

            <Button
                android:id="@+id/buttonBack"
                style="@style/calculatorButton"
                android:text="Back" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonParLeft"
                style="@style/calculatorButton"
                android:text="(" />

            <Button
                android:id="@+id/buttonParRight"
                style="@style/calculatorButton"
                android:text=")" />

            <Button
                android:id="@+id/buttonExp"
                style="@style/calculatorButton"
                android:text="^" />

            <Button
                android:id="@+id/buttonDiv"
                style="@style/calculatorButton"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                style="@style/calculatorButton"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                style="@style/calculatorButton"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                style="@style/calculatorButton"
                android:text="9" />

            <Button
                android:id="@+id/buttonMult"
                style="@style/calculatorButton"
                android:text="X" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                style="@style/calculatorButton"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                style="@style/calculatorButton"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                style="@style/calculatorButton"
                android:text="6" />

            <Button
                android:id="@+id/buttonSub"
                style="@style/calculatorButton"
                android:text="--" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                style="@style/calculatorButton"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/calculatorButton"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/calculatorButton"
                android:text="3" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/calculatorButton"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonDecimal"
                style="@style/calculatorButton"
                android:text=""/>

            <Button
                android:id="@+id/button0"
                style="@style/calculatorButton"
                android:text="0" />

            <Button
                android:id="@+id/buttonNeg"
                style="@style/calculatorButton"
                android:text="-" />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/calculatorButton"
                android:text="=" />
        </TableRow>

    </TableLayout>

</LinearLayout>