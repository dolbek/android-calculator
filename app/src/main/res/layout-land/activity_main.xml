<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="right|center_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/orderIndicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/slate"
            android:text="@string/regular" />

        <TextView
            android:id="@+id/memoryIndicator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/slate"
            android:text="@string/memory"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/runningDisplay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:maxLines="1"
            android:textColor="@color/slate"
            android:gravity="right|center_vertical"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:maxLines="1"
        android:textColor="@color/slate"
        android:gravity="right|center_vertical"
        android:textSize="40sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button7"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/button8"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/button9"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonDiv"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonOrder"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonClear"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonMem"
                style="@style/calculatorButton" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/button5"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/button6"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonMult"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonParRight"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonBack"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonMemAdd"
                style="@style/calculatorButton" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/button2"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/button3"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonSub"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonParLeft"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonExp"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonMemSub"
                style="@style/calculatorButton" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonDecimal"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/button0"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonNeg"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonSqrt"
                style="@style/calculatorButton" />

            <Button
                android:id="@+id/buttonMemRecall"
                style="@style/calculatorButton" />
        </TableRow>

    </TableLayout>

</LinearLayout>